@model JobApply.Models.Company

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="Name" class="form-control" onblur="validateName()" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span id="nameWarning" class="text-danger" style="display: none">Company name is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" onblur="validateCity()" />
                <span asp-validation-for="City" class="text-danger"></span>
                <span id="cityWarning" class="text-danger" style="display: none">City is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" onblur="validateCountry()" />
                <span asp-validation-for="Country" class="text-danger"></span>
                <span id="countryWarning" class="text-danger" style="display: none">Country is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="ContactEmail" class="control-label"></label>
                <input asp-for="ContactEmail" class="form-control" onblur="validateEmail()" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
                <span id="emailWarning" class="text-danger" style="display: none">Contact email is required.</span>
                <span id="emailValidation" class="text-danger" style="display: none">Wrong email format.</span>
            </div>
            <div class="form-group">
                <label asp-for="FoundationDate" class="control-label"></label>
                <input id="FoundationDate" class="form-control" onblur="validateDate()" placeholder="yyyy-mm-dd" />
                <span asp-validation-for="FoundationDate" class="text-danger"></span>
                <span id="dateWarning" class="text-danger" style="display: none">Foundation date is required.</span>
                <span id="dateValidation" class="text-danger" style="display: none">Invalid form of date. Use: yyyy-mm-dd.</span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>*@
            <div class="form-group">
                <button type="submit" , value="Submit" class="btn btn-primary" id="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
    <script src="@Url.Content("~/Scripts/postCompany.js")"></script>
}

